{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "constants/*": ["constants/*"],
      "controllers/*": ["controllers/*"],
      "gqlControllers/*": ["gqlControllers/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"]
    },
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
